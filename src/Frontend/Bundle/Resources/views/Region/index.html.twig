{% block body -%}

    <h3>Regiones</h3>
    
    <table class="records_list" id="datatable_crud">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre regi&oacute;n</th>
                <th>Pa&iacute;s</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('region_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreRegion }}</td>
                <td>{{ entity.paisPk }}</td>
                <td>                        <a href="{{ path('region_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                                    <a href="{{ path('region_delete', { 'id': entity.id }) }}" class="btn btn-danger" onclick="return confirmar()">Eliminar</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
