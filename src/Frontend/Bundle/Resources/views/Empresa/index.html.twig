{% block body -%}

    <h3>Empresas</h3>
    
    <table class="records_list" id="datatable_crud_posicion">
        <thead>
            <tr>
                <th>Id</th>
                <th>Posici&oacute;n</th>
                <th>Nombre empresa</th>
                <th>Ruc</th>
                <th>Direccion</th>
                <th>Referencia</th>
                <th>Telefono</th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('empresa_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.posicion }}</td>
                <td>{{ entity.nombreEmpresa }}</td>
                <td>{{ entity.ruc }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.referencia }}</td>
                <td>{{ entity.telefono }}</td>
                
                <td>                        <a href="{{ path('empresa_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                                    <a href="{{ path('empresa_delete', { 'id': entity.id }) }}" class="btn btn-danger" onclick="return confirmar()">Eliminar</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
