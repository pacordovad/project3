{% block body -%}

    <h3>Medidas</h3>
    
    <table class="records_list" id="datatable_crud_posicion">
        <thead>
            <tr>
                <th>Id</th>
                <th>Posicion</th>
                <th>Figura</th>
                <th>Alto</th>
                <th>Ancho</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('medida_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.posicion }}</td>
                <td>{{ entity.figuraPk }}</td>
                <td>{{ entity.largo }}</td>
                <td>{{ entity.ancho }}</td>
                <td>                        <a href="{{ path('medida_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                                    <a href="{{ path('medida_delete', { 'id': entity.id }) }}" class="btn btn-danger" onclick="return confirmar()">Eliminar</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}