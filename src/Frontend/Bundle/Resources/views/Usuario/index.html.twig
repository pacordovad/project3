{% block body -%}

    <h3>Usuarios</h3>
    
    <table class="records_list" id="datatable_crud">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rol</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Cedula</th>
                <th>Fecha de nacimiento</th>
                <th>Cargo</th>
                <th>Usuario</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('usuario_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.rolPk }}</td>
                <td>{{ entity.nombres }}</td>
                <td>{{ entity.apellidos }}</td>
                <td>{{ entity.cedula }}</td>
                <td>{% if entity.fechaNacimiento %}{{ entity.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.cargoPk }}</td>
                <td>{{ entity.usuario }}</td>
                <td>                        <a href="{{ path('usuario_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                                    <a href="{{ path('usuario_delete', { 'id': entity.id }) }}" class="btn btn-danger" onclick="return confirmar()">Eliminar</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
