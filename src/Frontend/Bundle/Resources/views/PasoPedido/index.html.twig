{% block body -%}

    <h3>Pasos de Pedidos</h3>
    
    <table class="records_list" id="datatable_crud_posicion">
        <thead>
            <tr>
                <th>Id</th>
                <th>Posici&oacute;n</th>
                <th>Nombre paso</th>
                <th>Paso por defecto</th>
                <th>Visible desde la web</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pasopedido_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.posicion }}</td>
                <td>{{ entity.nombrePaso }}</td>
                <td>
                    {% if entity.porDefecto == 1 %}
                    Si
                    {% else %}
                    No
                    {% endif %}
                </td>
                <td>
                    {% if entity.visibleWeb == 1 %}
                    Si
                    {% else %}
                    No
                    {% endif %}
                </td>
                <td>                        <a href="{{ path('pasopedido_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                                    <a href="{{ path('pasopedido_delete', { 'id': entity.id }) }}" class="btn btn-danger" onclick="return confirmar()">Eliminar</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
