{% block body -%}

    <h3>Areas</h3>
    
    <table class="records_list" id="datatable_crud">
        <thead>
            <tr>
                <th>Id</th>
                <th>C&oacute;digo</th>
                <th>Nombre &aacute;rea</th>
                <th>Empresa</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('area_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codigo }}</td>
                <td>{{ entity.nombreArea }}</td>
                <td>{{ entity.empresaPk }}</td>
                <td>                        <a href="{{ path('area_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                                    <a href="{{ path('area_delete', { 'id': entity.id }) }}" class="btn btn-danger" onclick="return confirmar()">Eliminar</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
